		  {
            "AttributeName" : "Id",
            "KeyType" : "HASH"
          }
		],
		"ProvisionedThroughput" : {
		  "ReadCapacityUnits" : "5",
          "WriteCapacityUnits" : "3"
		},
		"TableName" : "LLC-Stats"
	  }
	},
	"DbReports" : {
