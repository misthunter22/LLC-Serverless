		  "AttributeDefinitions" : [
          {
            "AttributeName" : "Id",
            "AttributeType" : "S"   
          }
        ],
		"KeySchema" : [
		  {
            "AttributeName" : "Id",
            "KeyType" : "HASH"
          }
		],
		"ProvisionedThroughput" : {
		  "ReadCapacityUnits" : "50",
          "WriteCapacityUnits" : "3"
		},
		"TableName" : "LLC-Reports"
	  }
	},
